<h1>Listing trimmers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Ponumber</th>
    <th>Location</th>
    <th>Phone</th>
    <th>Homepage</th>
  </tr>

<% @trimmers.each do |trimmer| %>
  <tr>
    <td><%=h trimmer.name %></td>
    <td><%=h trimmer.address %></td>
    <td><%=h trimmer.ponumber %></td>
    <td><%=h trimmer.location %></td>
    <td><%=h trimmer.phone %></td>
    <td><%=h trimmer.homepage %></td>
    <td><%= link_to 'Show', trimmer %></td>
    <td><%= link_to 'Edit', edit_trimmer_path(trimmer) %></td>
    <td><%= link_to 'Destroy', trimmer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New trimmer', new_trimmer_path %>